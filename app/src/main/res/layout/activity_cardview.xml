<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardUseCompatPadding="false"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imageProduk"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/namaProduk"
                android:text="Produk"
                android:textStyle="bold"
                android:textColor="@android:color/holo_orange_dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/banyakDiskon"
                android:text="Disc "
                android:textColor="@android:color/holo_blue_light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/banyakDiskon"
                android:text="0"
                android:layout_toLeftOf="@+id/persen"
                android:textColor="@android:color/holo_blue_light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/persen"
                android:text="%"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/holo_blue_light"/>

            <TextView
                android:id="@+id/rp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp."
                android:layout_below="@+id/namaProduk"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_below="@+id/namaProduk"
                android:layout_toRightOf="@+id/rp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/harga"
                android:text="Harga"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>